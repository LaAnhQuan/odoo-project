<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- LIST view cho bảng chấm công tháng -->
        <record id="view_hr_monthly_attendance_list" model="ir.ui.view">
            <field name="name">hr.monthly.attendance.list</field>
            <field name="model">hr.monthly.attendance</field>
            <field name="arch" type="xml">
                <list string="Bảng chấm công tháng">
                    <field name="name"/>
                    <field name="month"/>
                    <field name="year"/>
                    <field name="department_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- FORM view -->
        <record id="view_hr_monthly_attendance_form" model="ir.ui.view">
            <field name="name">hr.monthly.attendance.form</field>
            <field name="model">hr.monthly.attendance</field>
            <field name="arch" type="xml">
                <form string="Bảng chấm công tháng">
                    <header>

                        <button name="action_set_to_draft"
                                type="object"
                                string="Chuyển về nháp"
                                class="btn-secondary"/>

                        <button name="action_compute_from_attendance"
                                type="object"
                                string="Tính từ chấm công ngày"
                                class="btn-primary"/>

                        <button name="action_confirm"
                                type="object"
                                string="Xác nhận"
                                class="btn-success"/>

                        <button name="action_done"
                                type="object"
                                string="Đã chuyển lương"
                                class="btn-primary"/>

                        <!-- EXPORT -->
                        <button name="action_export_xlsx_matrix"
                                type="object"
                                string="Export Excel"
                                class="btn-secondary"/>

                        <!-- IMPORT MA TRẬN (GỌI ACTION, KHÔNG GỌI OBJECT) -->
                       <button name="%(mo_hr_monthly_attendance.action_hr_monthly_attendance_import_wizard)d"
                                type="action"
                                string="Import Excel (Ma trận)"
                                class="btn-secondary"/>


                        <field name="state"
                               widget="statusbar"
                               statusbar_visible="draft,computed,confirmed,done"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="month"/>
                                <field name="year"/>
                                <field name="company_id"/>
                                <field name="department_id"/>
                            </group>
                            <group>
                                <field name="date_from" readonly="1"/>
                                <field name="date_to" readonly="1"/>
                                <field name="note"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Chi tiết chấm công">
                                <field name="line_ids">
                                    <list editable="bottom">
                                        <field name="employee_id"/>
                                        <field name="worked_days"/>
                                        <field name="paid_leave_days"/>
                                        <field name="unpaid_leave_days"/>
                                        <field name="overtime_hours"/>
                                        <field name="total_paid_days" readonly="1"/>
                                        <field name="note"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_hr_monthly_attendance" model="ir.actions.act_window">
            <field name="name">Bảng chấm công tháng</field>
            <field name="res_model">hr.monthly.attendance</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- MENU -->
        <menuitem id="menu_hr_monthly_attendance_root"
                  name="Bảng chấm công tháng"
                  parent="hr.menu_hr_root"
                  action="action_hr_monthly_attendance"
                  sequence="30"/>

    </data>
</odoo>
